using System;

namespace ClassYapisi
{
    class Program
    {
        static void Main(string[] args)
        {
            Calisan calisan1 = new Calisan();
            calisan1.Ad = "Ali";
            calisan1.Soyad = "Yılmaz";
            calisan1.No = 1854721;
            calisan1.Departman = "IK";

            calisan1.CalisanBilgileri();

            Calisan calisan2 = new Calisan();
            calisan2.Ad = "Canan";
            calisan2.Soyad = "Yörükoğlu";
            calisan2.No = 1452687;
            calisan2.Departman = "Muhasebe";

            calisan2.CalisanBilgileri();



        }
    }

    class Calisan
    {
        public string Ad;

        public string Soyad;

        public int No;

        public string Departman;

        public void CalisanBilgileri()
        {
            Console.WriteLine("Calışanın Adı:{0}", Ad);
            Console.WriteLine("Calışanın Soyadı:{0}", Soyad);
            Console.WriteLine("Calışanın Numarası:{0}", No );
            Console.WriteLine("Calışanın Departmanı:{0}", Departman);
        }
    }
}
